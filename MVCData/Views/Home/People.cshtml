@model PeopleViewModel

<div id="people">
    <h1>Personer</h1>

    <table id="table">
        <tr>
            <th>Namn</th>
            <th>Telefonnummer</th>
            <th>Stad</th>
        </tr>
        @foreach (Person p in Model.People)
        {
            <tr>
                <td>@p.Name</td>

                <td>@p.PhoneNumber</td>

                <td>@p.City</td>

            </tr>
        }
    </table>
    }

    <form asp-action="People" method="post">
        <label asp-for="SearchString">Sök på stad: </label>
        <input asp-for="SearchString" />
        <button type="submit">Filtrera på stad</button>
    </form>

</div>

<div id="create">
    <h1>Create</h1>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="All"></div>
        <p>
            <label asp-for="CreatePersonViewModel.Name"></label>
            <input asp-for="CreatePersonViewModel.Name" />
        </p>
        <p>
            <label asp-for="CreatePersonViewModel.PhoneNumber"></label>
            <input asp-for="CreatePersonViewModel.PhoneNumber" />
        </p>
        <p>
            <label asp-for="CreatePersonViewModel.City"></label>
            <input asp-for="CreatePersonViewModel.City" />
        </p>
        <button type="submit">Skapa Person</button>
        <button type="reset">Rensa</button>
    </form>
</div>